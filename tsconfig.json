{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "lib": ["dom", "es6", "es2015.promise"],
    "strictNullChecks": false,
    "removeComments": true,
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@scss/*": ["assets/scss/*"],
      "@api/*": ["api/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "@actions/*": ["redux/actions/*"],
      "@reducers/*": ["redux/reducers/*"]
    }
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "build", "config"],
  "include": ["src"]
}
